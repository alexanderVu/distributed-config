{
  "name": "distributed-config",
  "version": "0.9.5",
  "description": "Load distributed config files on node js projects, with ability to extend or override settings throw environment variables.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./ --fix",
    "pretest": "NODE_ENV=test",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:fix": "npm run lint && jest --coverage",
    "jsdoc": "rimraf ./docs/api && jsdoc --readme ./README.md -c .jsdoc.json && open-cli ./docs/api/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexanderVu/distributed-config.git"
  },
  "engines": {
    "node": ">10.0.0",
    "npm": ">6.0.0"
  },
  "keywords": [
    "conf",
    "config",
    "configuration",
    "load",
    "env",
    "environment",
    "distributed"
  ],
  "author": {
    "name": "Alexander Vu",
    "email": "alexander.vu.tuyet@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "codecov": "^3.8.2",
    "docdash": "^1.2.0",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^26.6.3",
    "jsdoc": "^0.0.0",
    "mock-fs": "^4.14.0",
    "open-cli": "^6.0.1",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "dependencies": {
    "dot-prop-opt": "^1.0.5",
    "flat": "^5.0.2",
    "hjson": "^3.2.2",
    "is-obj": "^3.0.0",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.0"
  }
}
